<ul>
  <% if @idea.errors %>
    <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
</ul>

<%= form_for(@idea) do |f| %>
  <div class="form-group">
    <%= f.label :desc %>
    <%= f.text_field :desc, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-default' %>
<% end %>
