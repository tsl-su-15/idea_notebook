<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Comment #<%= @comment.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Contents</dt>
              <dd><%= @comment.contents %></dd>

              <dt>Idea</dt>
              <dd><%= link_to @idea.desc, idea_path(@idea.id) %></dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to comments_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_comment_url(@comment.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to comment_url(@comment.id), :method => "delete", :data => { :confirm => "Do you really want to delete this comment?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
