<%= form_for(@comment, html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :contents, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :contents, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for idea_id -->
  <div class="form-group">
    <%= f.label :idea_id, class: 'col-sm-2 control-label' %>

    <div class="col-sm-10">
      <%= f.text_field :idea_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
      or
      <a href="/comments">Cancel</a>
    </div>
  </div>
<% end %>
